<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<div>
<% @posts.each_with_index do |post, idx| %>
  <div><strong>Post #<%= idx + 1 %></strong></div>
  <div><strong>Title: </strong><%= post.title %></div>
  <div><strong>Body:</strong></div>
  <div><%= post.body %></div>
  <% if user_signed_in? %>
    <div><strong>User:</strong></div>
    <div><%= post.user[:email] %></div>
  <% end %> 
  <br><br>
<% end %>
</div>

<% if user_signed_in? %>
  <div> <%= link_to "New Post", new_post_path %> </div><br>
  <div> <%= link_to "Sign Out", destroy_user_session_path %> </div>
<% else %>
  <div> <%= link_to "Sign In", new_user_session_path %> | 
  <%= link_to "Sign Up", new_user_registration_path %></div>
<% end %>